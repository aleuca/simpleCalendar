html
    head
        title='Meeting App'
        link(href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.min.css', rel='stylesheet')
        link(href='/main.css' rel='stylesheet')
    body
    div(class='ui container display')
        div(class='ui items')
            div(class='ui content display')
                p(class='ui header')=`Topic: ${meeting.topic}`
                p(class='ui header')=`Duration: ${Math.floor((meeting.end - meeting.start) / 1000 / 60)} minutes`
                p(class='ui header')=`Occurrences: ${meeting.recurring.length}`
                a(class='ui blue basic button display' href='/')='Back to calendar'